<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccnu.hiic.activity.AdminGetClientActivity"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/main_toolbar"/>

    <LinearLayout
        android:id="@+id/ll_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#005661"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="风速"
                    android:textColor="@color/header_text_color"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wind_speed_111"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/header_text_color"
                    android:textSize="18dip" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#005661"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="风向"
                android:textColor="@color/header_text_color"
                android:textSize="18dip"/>

            <TextView
                android:id="@+id/wind_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/header_text_color"
                android:textSize="18dip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#005661"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="光照"
                    android:textColor="@color/header_text_color"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/light"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/header_text_color"
                    android:textSize="18dip" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#005661"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="降雨量"
                    android:textColor="@color/header_text_color"
                    android:textSize="18dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rainfall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/header_text_color"
                    android:textSize="18dip"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            android:background="#E9E1AF"
            android:orientation="vertical"
            android:stretchColumns="*">

            <TableRow
                android:layout_gravity="center"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="#c4ba6d"
                    android:text="蜂场"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20dip" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="#c4ba6d"
                    android:text="蜂箱"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20dip" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="#c4ba6d"
                    android:text="温度"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:textSize="20dip" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="#c4ba6d"
                    android:text="湿度"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20dip" />

                <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_margin="0.5dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="#c4ba6d"-->
                <!--android:text="烟雾"-->
                <!--android:textAlignment="center"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="20dip" />-->

                <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_margin="0.5dp"-->
                <!--android:layout_weight="1"-->
                <!--android:textAlignment="center"-->
                <!--android:background="#c4ba6d"-->
                <!--android:text="门禁"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="20dip" />-->
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/main_srl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lv_nodes"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:divider="#e7e7e7"
                android:background="#ffffff"
                android:dividerHeight="0.5dp">
            </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>



</LinearLayout>

    <ImageView
        android:id="@+id/iv_add_node"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add_client"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>