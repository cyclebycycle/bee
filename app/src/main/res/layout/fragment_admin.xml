<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/listview_bg"
        android:orientation="vertical"
        android:padding="@dimen/space_3"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">

        <TextView
            android:id="@+id/node_regist"
            style="@style/fragment_user"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_right"
            android:gravity="left"
            android:paddingBottom="@dimen/space_10"
            android:paddingTop="@dimen/space_10"
            android:text="@string/node_regist" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/mess_config"
            style="@style/fragment_user"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_right"
            android:gravity="left"
            android:paddingBottom="@dimen/space_10"
            android:paddingTop="@dimen/space_10"
            android:text="@string/mess_config" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/user_manage"
            style="@style/fragment_user"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_right"
            android:gravity="left"
            android:paddingBottom="@dimen/space_10"
            android:paddingTop="@dimen/space_10"
            android:text="@string/user_manage" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>