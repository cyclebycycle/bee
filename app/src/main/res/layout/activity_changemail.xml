<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_toolbar"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/mail"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/text_size_20"
        android:paddingLeft="@dimen/text_size_25"
        android:paddingRight="@dimen/text_size_25"
        android:paddingTop="@dimen/space_20">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mail_old"
                android:textSize="@dimen/text_size_20" />

            <EditText
                android:id="@+id/mail_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="8"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mail_new"
                android:textSize="@dimen/text_size_20"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="100dp" />

            <EditText
                android:id="@+id/mail_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="8"
                android:hint="请输入新邮箱"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_selector"
        android:textSize="@dimen/text_size_20"
        android:text="@string/confirm"
        android:textColor="#ffffff" />

</LinearLayout>